{
  "name": "backend-starter",
  "version": "1.0.0",
  "description": "Backend starter template",
  "main": "dist/server.js",
  "repository": "https://github.com/backmeupplz/backend-starter",
  "author": "backmeupplz <backmeupplz@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "distribute": "yarn build-ts && yarn copy-views && node dist/server.js",
    "develop": "concurrently -i -k -p \"[{name}]\" -n \"Node,TypeScript,Copy-Views\" -c \"yellow.bold,cyan.bold,reset\" \"yarn watch-js\" \"yarn watch-ts\" \"yarn copy-views-dev\"",
    "build-ts": "tsc --skipLibCheck",
    "watch-ts": "tsc -w --skipLibCheck",
    "watch-js": "nodemon dist/server.js",
    "copy-views-dev": "nodemon -e ect,css --exec \"copyfiles -u 1 src/views/** dist\"",
    "copy-views": "copyfiles -u 1 src/views/** dist",
    "test": "yarn jest --forceExit"
  },
  "devDependencies": {
    "@koa/cors": "^3.1.0",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/koa": "^2.13.3",
    "@types/lodash": "^4.14.168",
    "@types/node": "^15.12.5",
    "@types/sqlite3": "^3.1.7",
    "concurrently": "^6.0.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.9",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@types/koa-bodyparser": "^4.3.1",
    "amala": "^5.1.2",
    "axios": "^0.21.1",
    "axios-mock-adapter": "^1.19.0",
    "dotenv": "^10.0.0",
    "ect": "^0.5.9",
    "facebook-node-sdk": "^0.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "koa-views": "^7.0.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "sqlite3": "^5.0.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
